{
  "include": ["./src/**/*", "./*.tsx", "./*.ts"],
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["dom", "DOM.Iterable", "esnext"],
    "jsx": "react-jsx",
    "baseUrl": "src",
  },
}
