{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Server",
      "type": "shell",
      "command": "npm i && npm start",
      "windows": {
        "command": "npm i && npm start"
      },
      "presentation": {
        "panel": "new",
        "echo": false,
        "reveal": "never"
      },
      "runOptions": { "runOn": "folderOpen" },
      "icon": {
        "id": "vm-running",
        "color": "terminal.ansiGreen"
      }
    },
    {
      "type": "shell",
      "label": "Lint Project",
      "command": "npx eslint . || exit 0",
      "problemMatcher": ["$eslint-stylish"],
      "icon": {
        "id": "notebook",
        "color": "terminal.ansiGreen"
      },
      "presentation": {
        "reveal": "never",
        "close": true
      }
    },
    {
      "type": "shell",
      "label": "Lint CSS",
      "command": "npm run lint:css || exit 0",
      "problemMatcher": [
        {
          "owner": "stylelint",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^([^\\s].*)$",
              "file": 1
            },
            {
              "regexp": "^\\s+(\\d+):(\\d+)\\s+(✖)\\s+(.+)\\s(\\S+)\\s*$",
              "line": 1,
              "column": 2,
              "severity": 3,
              "message": 4,
              "code": 5
            },
            {
              "regexp": "^(\\s\\s\\s+(\\D.*)[\\n\\r]+)+",
              "message": 1,
              "loop": true
            }
          ]
        },
        {
          "owner": "stylelint",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^([^\\s].*)$",
              "file": 1
            },
            {
              "regexp": "^\\s+(\\d+):(\\d+)\\s+(✖)\\s+(.+)\\s(\\S+)\\s*$",
              "line": 1,
              "column": 2,
              "severity": 3,
              "message": 4,
              "code": 5,
              "loop": true
            }
          ]
        }
      ],
      "icon": {
        "id": "notebook",
        "color": "terminal.ansiGreen"
      },
      "presentation": {
        "reveal": "never",
        "close": true
      }
    }
  ]
}
