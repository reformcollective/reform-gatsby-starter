{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Server",
      "type": "shell",
      "command": "npm i && npm start",
      "windows": {
        "command": "npm i && npm start"
      },
      "presentation": {
        "panel": "new",
        "echo": false,
        "reveal": "never"
      },
      "runOptions": { "runOn": "folderOpen" },
      "icon": {
        "id": "vm-running",
        "color": "terminal.ansiGreen"
      }
    },
    {
      "type": "shell",
      "label": "Lint Project",
      "command": "npx eslint . || exit 0",
      "problemMatcher": ["$eslint-stylish"],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "icon": {
        "id": "notebook",
        "color": "terminal.ansiGreen"
      },
      "presentation": {
        "reveal": "never",
        "close": true
      }
    }
  ]
}
